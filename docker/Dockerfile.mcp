# Use official Python 3.11 image
FROM python:3.11-slim

# Install git and any dependencies
RUN apt-get update && apt-get install -y \
    git \
    libgl1 \
    libglib2.0-0 \
    netcat-openbsd \
&& rm -rf /var/lib/apt/lists/*

# Install mcpo and any other Python dependencies
RUN pip install --no-cache-dir mcpo uv

# Set working directory
WORKDIR /app

# Clone the ros-mcp-server repository
RUN git clone https://github.com/robotmcp/ros-mcp-server.git .

RUN sed -i 's/ROSBRIDGE_IP = "127.0.0.1".*/ROSBRIDGE_IP = os.getenv("ROSBRIDGE_IP", "127.0.0.1")/' server.py
RUN sed -i '/ROSBRIDGE_PORT = (/,/)/c\ROSBRIDGE_PORT = int(os.getenv("ROSBRIDGE_PORT", "9900"))' server.py
